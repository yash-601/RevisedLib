<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".Reader_Login">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/reader"
        android:backgroundTint="@color/purple_700"></ImageView>

    <EditText
        android:id="@+id/Email_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_img"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Email"

        android:textAlignment="center"
        android:textColorHint="#838383"></EditText>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text"
        android:layout_below="@+id/Email_login"
        android:id="@+id/Password_login"
        android:layout_marginTop="40dp"
        android:focusable="true"
        android:inputType="textPassword"
        android:password="true"
        android:focusableInTouchMode="true"
        android:hint="Password"
        android:textAlignment="center"
        android:textColorHint="#FF838383"></EditText>

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password_login"
        android:layout_marginTop="50dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/Back_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password_login"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/button"
        android:text="Back"
        android:onClick="btn_back_welcome"
        android:textColor="#FFFFFF" />


    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Back_launch"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:onClick="btn_back_welcome"/>

</RelativeLayout>